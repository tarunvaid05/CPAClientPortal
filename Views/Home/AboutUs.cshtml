@{
    ViewData["Title"] = "About Us";
}

<!-- About Hero Section -->
<section class="about-hero py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-content">
                    <h1 class="display-4 fw-bold text-dark mb-4">About <span class="text-primary">Jyoti Iyer</span></h1>
                    <p class="lead text-muted mb-4">
                        With over 15 years of experience in accounting and financial services, I am dedicated to providing
                        personalized, professional solutions that help my clients achieve their financial goals.
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-image text-center">
                    <img src="~/images/Logo.png" alt="Jyoti Iyer CPA" class="img-fluid about-logo" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Professional Background Section -->
<section class="professional-background py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="section-title text-center mb-5">Professional Background</h2>
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h4>CPA License & Certification</h4>
                            <p class="text-muted mb-2">2008 - Present</p>
                            <p>
                                Licensed Certified Public Accountant with active status and continuous professional education.
                                Specialized in individual and business tax preparation, financial planning, and audit services.
                            </p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h4>Master of Science in Accounting</h4>
                            <p class="text-muted mb-2">University of Business Excellence - 2006</p>
                            <p>
                                Advanced degree with concentration in taxation and financial reporting. Graduated Magna Cum Laude
                                with specialized coursework in corporate finance and advanced taxation principles.
                            </p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h4>Bachelor of Business Administration</h4>
                            <p class="text-muted mb-2">State University - 2004</p>
                            <p>
                                Major in Accounting with minor in Business Management. Dean's List recognition and active
                                participation in Accounting Society and Beta Alpha Psi honor society.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Expertise Areas -->
<section class="expertise-areas py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h2 class="section-title text-center mb-5">Areas of Expertise</h2>
                <div class="row">
                    <div class="col-lg-6 mb-4">
                        <div class="expertise-card">
                            <div class="expertise-icon">
                                <i class="fas fa-file-invoice-dollar text-primary"></i>
                            </div>
                            <div class="expertise-content">
                                <h4>Tax Planning & Preparation</h4>
                                <p>
                                    Comprehensive tax services for individuals, partnerships, corporations, and LLCs.
                                    Strategic tax planning to minimize liability and maximize deductions.
                                </p>
                                <ul class="expertise-list">
                                    <li>Individual Tax Returns (1040)</li>
                                    <li>Business Tax Returns (1120, 1120S, 1065)</li>
                                    <li>Tax Planning & Strategy</li>
                                    <li>IRS Representation</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-4">
                        <div class="expertise-card">
                            <div class="expertise-icon">
                                <i class="fas fa-chart-bar text-primary"></i>
                            </div>
                            <div class="expertise-content">
                                <h4>Financial Consulting</h4>
                                <p>
                                    Strategic financial advice to help businesses and individuals make informed decisions
                                    and achieve long-term financial success.
                                </p>
                                <ul class="expertise-list">
                                    <li>Financial Statement Analysis</li>
                                    <li>Cash Flow Management</li>
                                    <li>Business Valuation</li>
                                    <li>Investment Planning</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-4">
                        <div class="expertise-card">
                            <div class="expertise-icon">
                                <i class="fas fa-building text-primary"></i>
                            </div>
                            <div class="expertise-content">
                                <h4>Business Services</h4>
                                <p>
                                    Complete business support from formation to ongoing compliance, helping entrepreneurs
                                    and established businesses thrive.
                                </p>
                                <ul class="expertise-list">
                                    <li>Business Formation & Structure</li>
                                    <li>Bookkeeping & QuickBooks</li>
                                    <li>Payroll Processing</li>
                                    <li>Financial Reporting</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-4">
                        <div class="expertise-card">
                            <div class="expertise-icon">
                                <i class="fas fa-shield-alt text-primary"></i>
                            </div>
                            <div class="expertise-content">
                                <h4>Audit & Assurance</h4>
                                <p>
                                    Independent audit and review services to provide stakeholders with confidence
                                    in financial reporting and internal controls.
                                </p>
                                <ul class="expertise-list">
                                    <li>Financial Statement Audits</li>
                                    <li>Review Engagements</li>
                                    <li>Internal Control Assessment</li>
                                    <li>Compliance Auditing</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

