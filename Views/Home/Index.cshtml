@using JyotiIyerCPA.Models
@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center" style="min-height: calc(100vh - 72px);">
            <div class="col-lg-6">
                <div class="hero-content fade-in">
                    <h1 class="display-4 fw-bold text-dark mb-4">
                        <span class="text-primary">Jyoti Iyer</span><br>
                        Certified Public Accountant
                    </h1>
                    <p class="lead text-muted mb-4">
                        Professional accounting services tailored to your needs. With years of experience and dedication to excellence,
                        I help individuals and businesses navigate their financial journey with confidence.
                    </p>
                    <div class="hero-buttons">
                        <a href="@Url.Action("AboutUs")" class="btn btn-primary btn-lg me-3 mb-2">Learn More About Us</a>
                        <a href="@Url.Action("Services")" class="btn btn-outline-primary btn-lg mb-2">Our Services</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <img src="~/images/Logo.png" alt="Jyoti Iyer CPA" class="img-fluid hero-logo" />
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Qualifications Section -->
<section class="qualifications-section py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title mb-5">Professional Qualifications</h2>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="qualification-card">
                            <div class="qualification-icon">
                                <i class="fas fa-certificate text-primary"></i>
                            </div>
                            <h4>CPA Licensed</h4>
                            <p>Certified Public Accountant with active license and continuing education</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="qualification-card">
                            <div class="qualification-icon">
                                <i class="fas fa-graduation-cap text-primary"></i>
                            </div>
                            <h4>Advanced Degree</h4>
                            <p>Master's in Accounting with specialized focus on tax and financial planning</p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="qualification-card">
                            <div class="qualification-icon">
                                <i class="fas fa-award text-primary"></i>
                            </div>
                            <h4>15+ Years Experience</h4>
                            <p>Extensive experience serving diverse clients across multiple industries</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title mb-5">What Our Clients Say</h2>
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Testimonials.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="testimonial-card">
                                    <div class="stars mb-3">
                                        @for (int j = 0; j < Model.Testimonials[i].Rating; j++)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                    </div>
                                    <blockquote class="blockquote">
                                        <p>"@Model.Testimonials[i].Message"</p>
                                    </blockquote>
                                    <footer class="blockquote-footer">
                                        <strong>@Model.Testimonials[i].Name</strong>
                                        <cite title="Source Title">@Model.Testimonials[i].Company</cite>
                                    </footer>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section bg-light text-dark" style="padding: 3rem 0 3.925rem;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title mb-5">Ready to Get Started?</h2>
                <p class="lead mb-4">
                    Contact us today for a consultation and see how we can help you achieve your financial goals.
                </p>
                <a href="@Url.Action("ContactUs")" class="btn btn-primary btn-lg">Get In Touch</a>
            </div>
        </div>
    </div>
</section>

