@model JyotiIyerCPA.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/JILogo-rqoWNVzhAq7lz3IcopV4cnIyWDrb9V.png" alt="Jyoti Iyer CPA" style="height: 60px;" class="mb-3" />
                        <h3>Forgot Your Password?</h3>
                        <p class="text-muted">Enter your email to receive a password reset link</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Send Reset Link</button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <p>Remember your password? <a asp-action="Login">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}