@using JyotiIyerCPA.Models
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jyoti Iyer CPA Admin Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-portal.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="admin-portal-body">
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #d1d1d1;">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Admin")">
                <img src="~/images/LogoNoText.png" alt="Jyoti Iyer CPA Logo" class="logo-img" />
                <span class="brand-text">Admin Portal</span>
            </a>

            <div class="navbar-nav ms-auto">
                <!-- User Profile Dropdown -->
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @{ 
                            var displayName = "Admin";
                            var initials = "A";
                            if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                var usr = await UserManager.GetUserAsync(User);
                                if (usr != null)
                                {
                                    var fn = (usr.FirstName ?? string.Empty).Trim();
                                    var ln = (usr.LastName ?? string.Empty).Trim();
                                    var full = ($"{fn} {ln}").Trim();
                                    displayName = string.IsNullOrWhiteSpace(full) ? (usr.Email ?? usr.UserName ?? "Admin") : full;

                                    char? fch = !string.IsNullOrWhiteSpace(fn) ? char.ToUpperInvariant(fn[0]) : (char?)null;
                                    char? lch = !string.IsNullOrWhiteSpace(ln) ? char.ToUpperInvariant(ln[0]) : (char?)null;
                                    if (fch.HasValue || lch.HasValue)
                                    {
                                        initials = $"{(fch.HasValue ? fch.Value.ToString() : string.Empty)}{(lch.HasValue ? lch.Value.ToString() : string.Empty)}";
                                    }
                                    else if (!string.IsNullOrWhiteSpace(usr.Email))
                                    {
                                        initials = char.ToUpperInvariant(usr.Email.Trim()[0]).ToString();
                                    }
                                    else if (!string.IsNullOrWhiteSpace(usr.UserName))
                                    {
                                        initials = char.ToUpperInvariant(usr.UserName.Trim()[0]).ToString();
                                    }
                                }
                            }
                        }
                        <div class="user-avatar me-2">@initials</div>
                        <span class="user-name">@displayName</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><h6 class="dropdown-header">Account Settings</h6></li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("EditProfile", "Admin")">
                                <i class="fas fa-user-edit me-2"></i>Edit Profile
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")">
                                <i class="fas fa-key me-2"></i>Change Password
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#notificationModal">
                                <i class="fas fa-bell me-2"></i>Notification Settings
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Admin")">
                                <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    

    

    <!-- Notification Settings Modal -->
    <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="notificationModalLabel">
                        <i class="fas fa-bell me-2"></i>Notification Settings
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="notificationForm">
                    <div class="modal-body">
                        <div class="notification-group mb-4">
                            <h6>Email Notifications</h6>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="emailNotifications" checked>
                                <label class="form-check-label" for="emailNotifications">
                                    Enable email notifications
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="clientUploadEmail" checked>
                                <label class="form-check-label" for="clientUploadEmail">
                                    Client document uploads
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="systemAlertsEmail" checked>
                                <label class="form-check-label" for="systemAlertsEmail">
                                    System alerts and updates
                                </label>
                            </div>
                        </div>
                        <div class="notification-group">
                            <h6>SMS Notifications</h6>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="smsNotifications">
                                <label class="form-check-label" for="smsNotifications">
                                    Enable SMS notifications
                                </label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="urgentAlertsSms">
                                <label class="form-check-label" for="urgentAlertsSms">
                                    Urgent system alerts
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Settings</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

